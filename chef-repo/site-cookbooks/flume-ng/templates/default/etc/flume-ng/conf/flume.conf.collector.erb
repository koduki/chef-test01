# Describe the sink
agent.sinks.debug.type = logger
agent.sinks.debug.channel = memoryChannel

agent.sinks.file.type = file_roll
agent.sinks.file.channel = memoryChannel
agent.sinks.file.sink.directory = /var/log/flume-ng/data
agent.sinks.file.sink.rollInterval = 0

# Use a channel which buffers events in memory
agent.channels.memoryChannel.type = memory
agent.channels.memoryChannel.capacity = 1000
agent.channels.memoryChannel.transactionCapacity = 100
